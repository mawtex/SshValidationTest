<div class="search-results" data-oc-controller="Product.SearchResults" data-context="{{JsonContext}}">
    {{#if ProductSearchResults.TotalCount}}
    {{#if_gt ProductSearchResults.TotalCount 0 }}
        <!-- Search results -->
        {{#with ProductSearchResults}}
        <div class="row">
            {{#each SearchResults}}
            <div class="col-xs-6  col-sm-4  col-lg-3"  data-qa="search-results">
                {{> SearchProductResult}}
            </div>
            {{/each}}
        </div>
        {{/with}}

        <!--Product quick view-->
        <div>
            {{> ProductQuickViewDataBlade}}
        </div>
    {{/if_gt}}
    {{/if}}
</div>